#include "toy.h"

int main(int argc, char *argv[]) {

	if (argc < 2) {
		std::cout << "usage is toy {program name} < {input file}" << std::endl;
		return 1;
	}

	std::ifstream file(argv[1]);

	Toy toy(file);

	toy.runProgram(std::cin, std::cout);

}

