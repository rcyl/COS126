#include <iostream>
#include <string>
#include <fstream>

#define PRINT(msg) std::cout << msg << std::endl;

int main(int argc,char *argv[]) {

	if (argc != 2) {
		PRINT("usage is cheat {input file}");
		return 1;
	}

	std::ifstream file(argv[1]);
	std::string line;

	while(1) {
		getline(file, line);
		if (line.compare("FFFF") == 0) {
			return 0;
		}
	}




	return 0;
}

void flipBits() {

	int M[4] = { 1, 1, 0, 1};
	int p[3] = { 1, 0, 1 };
	int mor = 0;
	int cmpi = 0;
	int failCount = 0;

	for(int i= 0; i < 4; i++)
		mor ^= M[i];

	for(int i = 2; i >=0 ; i--) {
		int pi = p[i];
		int shift = (1 << i);
		int temp = mor ^ M[2 - i];
		temp = (pi == temp);
		temp = temp << i;
		cmpi += temp;
	}

	for(int i = 2; i >= 0; i--) {
		int temp = (1 << i);
		if (temp == cmpi) {
			M[2 - i] = M[2 - i] ^ 1;
			break;
		}
	}
	if (cmpi == 0)
		M[3] = M[3] ^ 1;

	for(int i = 0; i < 4; i++) {
		std::cout << M[i] << std::endl;
	}
}

