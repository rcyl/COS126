#include "sierpinski.h"

Sierpinski::Sierpinski(QWidget *parent) {

};

Sierpinski::~Sierpinski() {

};

void Sierpinski::paintEvent(QPaintEvent *e) {

	 Q_UNUSED(e);
	 doDrawing();
}

void Sierpinski::doDrawing() {

	QPainter qp(this);
	qp.translate(width() / 2, height() / 2);



}
