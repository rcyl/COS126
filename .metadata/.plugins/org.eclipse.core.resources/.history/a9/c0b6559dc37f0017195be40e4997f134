
/* register map */

r0 
r1 = m0
r2 = m1
r3 = m2
r4 = m3
r5 = p0
r6 = p1
r7 = p2
r8 = temp
r9 = 
rA = 
rB = 
rC = 
rD = 
rE = 
rF = 

/* "load address" is anything, but "load" deferences memory */

loadaddr mask8, 8 

main2:
	load m0, 0xFF
	and temp, m0, mask8 /* read first bit of input */
	bpos temp, halt
	
	load m1, 0xFF
	load m2, 0xFF
	load m3, 0xFF
	
	(perCalc2)
	xor temp, m0, m3 // temp = m0 ^ m3
	xor p0, m1, temp // p0 = m0 ^ m1 ^ m3
	xor p1, m2, temp // p1 = m0 ^ m2 ^ m3
	xor temp, m1, m2 // temp = m1 ^ m2
	xor p2, temp, m3 // p2 = m1 ^ m2 ^ m3
	
	(print)
	store p0, 0xFF
	store p1, 0xFF
	store p2, 0xFF
	
	j main2
halt:
	0000