#include <iostream>

int main() {

	int M[4] = { 0, 1, 1, 0};
	int p[3] = { 0, 0, 0 };
	int calcpi = 0;
	int mor = 0;
	int cmpi;
	int failCount = 0;

	for(int i= 0; i < 4; i++) {
		mor ^= M[i];
	}

	for(int i = 2; i >=0 ; i--) {
		int pi = p[i];
		int shift = (1 << i);
		int temp = mor ^ M[i];
		temp = (pi == temp);
		temp = temp << shift;
		cmpi += temp;
	}

	for(int i = 2; i >= 0; i--) {
		int temp = (1 << i);
		if (temp == cmpi) {
			M[i] = M[i] ^ 1;
			break;
		}
	}
	if (cmpi == 0)
		M[3] = M[3] ^ 1;

	for(int i = 0; i < 4; i++) {
		std::cout << M[i] << std::endl;
	}


	return 0;
}


