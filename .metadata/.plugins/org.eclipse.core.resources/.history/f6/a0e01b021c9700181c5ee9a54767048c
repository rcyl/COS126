void testrand() {

	std::string text1 = "gagggagaggcgagaaa";
	MarkovModel model1(text1, 2);
	std::cout << model1.toString() << std::endl;

	std::array<int, 128> count {};
	int N = 100000;

	for(int i = 0; i < N; i++) {
		char c = model1.random("ag");
		count[c]++;
	}

	for(int i = 0; i < 128; i++) {
		if (count[i] != 0) {
			std::cout << "char: " << char(i) << ", prob: " << count[i]/N << std::endl;
		}
	}

}
