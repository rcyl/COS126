#ifndef MARKOVMODEL_H_
#define MARKOVMODEL_H_

#include <map>

class MarkovModel {
	int k;
	std::string str;


public:
	MarkovModel(std::string text, int k);
	int order();
	std::string toString();
	int freq(const std::string kgram);
	int freq(const std::string kgram, char c);
};




#endif /* MARKOVMODEL_H_ */
