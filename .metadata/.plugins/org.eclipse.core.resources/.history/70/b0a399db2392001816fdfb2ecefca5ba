#include <iostream>

int main() {

	int M[4] = { 1, 1, 0, 0};
	int p[3] = { 1, 0, 0 };
	int mor = 0;
	int cmpi = 0;
	int failCount = 0;

	for(int i= 0; i < 4; i++)
		mor ^= M[i];

	for(int i = 2; i >=0 ; i--) {
		int pi = p[i];
		int shift = (1 << i);
		int temp = mor ^ M[2 - i];
		temp = (pi == temp);
		//std::cout << "cmp is: " << temp << std::endl;
		temp = temp << i;
		//std::cout << "shifted is: " << temp << std::endl;
		cmpi += temp;
	}

	//std::cout << "cmpi is: " << cmpi << std::endl;

	for(int i = 2; i >= 0; i--) {
		int temp = (1 << i);
		if (temp == cmpi) {
			M[2 - i] = M[2 - i] ^ 1;
			break;
		}
	}
	if (cmpi == 0)
		M[3] = M[3] ^ 1;

	for(int i = 0; i < 4; i++) {
		std::cout << M[i] << std::endl;
	}


	return 0;
}


