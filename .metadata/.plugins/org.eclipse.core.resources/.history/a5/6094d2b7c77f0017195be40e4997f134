#include "toy.h"

int main(int argc, char *argv[]) {

	if (argc < 2) {
		std::cout << "usage is toy {program name} < {input file}" << std::endl;
		return 1;
	}

	std::string line;
	char input[6];

	std::ifstream file(argv[1]);

	while(!std::cin.eof()) {
		while(std::cin.get(input, 6, '~')) {
			line = input;
			std::replace()
			std::cout << line << std::endl;
		}
	}
	//Toy toy(file);
	//toy.runProgram(std::cin, std::cout);

}

